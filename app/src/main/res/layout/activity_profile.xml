<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgIronMan"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_margin="20dp"
        android:src="@drawable/tony_stark" />

    <TextView
        android:id="@+id/txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/imgIronMan"
        android:text="Tony Stark"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtName"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/imgIronMan"
        android:text="tony@starkindustries.com"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtEmail"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/imgIronMan"
        android:text="+1 9999955555"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnMoreInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="More Information"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:background="#ff5722"
        android:layout_below="@id/imgIronMan"
        android:layout_margin="20dp"/>

    <Button
        android:id="@+id/btnExit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Exit App"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:background="#2196f3"
        android:layout_margin="20dp"
        android:layout_alignParentBottom="true"/>


</RelativeLayout>